<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/name_view_light_bulb_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="Light Bulb Name"
            android:textColor="@color/text"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/text_view_Lay_light_bulb_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_view_light_bulb_list_item"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:text="00:00"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <Button
            android:id="@+id/set_time_Lay_light_bulb_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/toggle_light_Lay_light_bulb_list_item"
            android:background="@drawable/bg_command"
            android:text="Set time"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/toggle_light_Lay_light_bulb_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_command"
            android:text="Toggle"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</LinearLayout>