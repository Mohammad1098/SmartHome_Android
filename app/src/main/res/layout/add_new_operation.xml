<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:hint="Operation Name"
        android:id="@+id/Operation_name_Lay_add_new_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />


    <EditText
        android:hint="Implementation"
        android:id="@+id/Operation_Implementation_Lay_add_new_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />



    <Button
        android:id="@+id/add_operation_button_Lay_add_new_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Operation"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"

        />

</LinearLayout>







